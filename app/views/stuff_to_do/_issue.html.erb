<li class="stuff-to-do-item <%= issue.css_classes if issue.respond_to?(:css_classes) %> <%= issue_counter.odd? ? "odd" : "even" %>" id="stuff_<%= issue.id %>">
  <div class="issue-details">
    <%= link_to(image_tag('ticket.png')+"#"+issue.id.to_s, :controller => 'issues', :action => 'show', :id => issue) %>
    - <%= h(issue.project.name) %> -
    <%= h(issue.subject) %>
  </div>

  <div class="issue-info">
      <%= h issue.tracker.name %> / <%= h issue.status.name %> / <%= h issue.priority.name %>

      <% if issue.category %>
        / <%= h issue.category.name %>
      <% end %>

      <% if issue.estimated_hours && issue.estimated_hours > 0 %>
        / <%= h(issue.estimated_hours) %>h
      <% end %>
  </div>


  <div style="clear:left;"></div>
</li>

